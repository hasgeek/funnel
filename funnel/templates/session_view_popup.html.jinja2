<div class="modal__header mui--bg-accent">
  <a class="modal__close" href="javascript:void(0);" aria-label="close" rel="modal:close"><i class="material-icons">clear</i></a>
  <h3 class="js-modal-title mui--text-headline session-modal__title">{{ session.title }}</h3>
  <div class="mui--clearfix">
    {% if session.speaker %}
      <p class="mui--text-title zero-bottom-margin"><small class="mui--text-light">by</small> <strong>{{ session.speaker }}</strong></p>
    {% endif %}
    {% if session.proposal %}
      <a class="mui-btn mui-btn--small mui-btn--raised mui-btn--primary mui--pull-right" href="{{ session.proposal.url_for('view') }}" target="_blank">View Proposal</a>
    {% endif %}
    {% if session.scheduled %}
      <p class="mui--text-subhead zero-bottom-margin">
        <small class="mui--text-light">at</small>
        {{ localize_date(session.start, to_tz=timezone).strftime('%I:%M %p') }} - {{ localize_date(session.end, to_tz=timezone).strftime('%I:%M %p') }}
        <small class="mui--text-light">on</small>
        {{ localize_date(session.start, to_tz=timezone).strftime('%d %B, %Y') }}
      </p>
    {% else %}
      <p class="mui--text-subhead zero-bottom-margin">
      {% trans %}This session has not been scheduled yet.{% endtrans %}
      </p>
    {% endif %}
    {% if session.venue_room %}
      <p class="mui--text-subhead zero-bottom-margin"><small class="mui--text-light">in</small> {{ session.venue_room.title }} <small class="mui--text-light">{{ session.venue_room.venue.title }}</small></p>
    {% endif %}
  </div>
</div>
<div class="modal__body">
  {% if session.proposal %}
    <div class="proposal-status-wrapper">
      <div class="grid">
        {% if session.proposal.section %}
        <div class="col-auto columns">
          <p class="mui--text-body2 mui--text-light zero-bottom-margin">Section</p>
          <p class="mui--text-title">{{ session.proposal.section.title }}</p>
        </div>
        {% endif %}
        <div class="col-auto columns">
          <p class="mui--text-body2 mui--text-light zero-bottom-margin">Technical Level</p>
          <p class="mui--text-title">{{ session.proposal.technical_level }}</p>
        </div>
      </div>
    </div>
  {% endif %}
  <div class="section">
    {% if session.description_html %}
      <h3 class="mui--text-title"><strong>{% trans %}Description{% endtrans %}</strong></h3>
      <div class="mui--text-body2">{{ session.description_html|safe }}</div>
    {% endif %}
    {% if session.speaker_bio_html %}
      <h3 class="mui--text-title"><strong>{% trans %}Speaker Bio{% endtrans %}</strong></h3>
      <div class="mui--text-body2">{{ session.speaker_bio_html|safe }}</div>
    {% endif %}
  </div>
</div>
