{% extends "layout.html.jinja2" %}
{% from "baseframe/forms.html.jinja2" import ajaxform %}
{% block title %}Search{% endblock %}
{% block description %}Search{% endblock %}

{% block bodytag %}
  {%- if not config['LEGACY'] -%}
    <body class="mui--bg-primary hg-app tabs-navbar">
  {%- else %}
    <body class="mui--bg-primary">
  {%- endif %}
{% endblock %}

{% block headline -%}
{%- endblock %}

{% block basecontentbox %}
    <div class="js-lazyload-results">
      <div id="search-wrapper">
        {% raw %}
        <script id='search-template' type='text/ractive'>
          <div class="tabs-wrapper tabs-wrapper--sticky">
            <div class="mui-container">
              <div class="grid">
                <div class="grid__col-12">
                  <div class="tabs" id="scrollable-tabs">
                    <p class="tabs__item tabs__item-control tabs__item-control--prev mui--text-body1 mui--text-light" aria-label="{% trans %}Previous{% endtrans %}" on-click="swipe(-1)"><svg class="fa5-icon fa5-icon--subhead test fa5--align-baseline" aria-hidden="true" role="img"><use xlink:href="{{ svgIconUrl }}#chevron-left"></use></svg></p>
                    {{#each tabs}}
                      <p class="tabs__item mui--text-body1 mui--text-light mui--text-uppercase {{#if activeTab == type}}tabs__item--active{{/if}}" on-click="updateTabContent(type)">{{ label }} <span class="count-chip mui--text-caption">{{ count }}</span></p>
                    {{/each}}
                    <p class="tabs__item tabs__item-control tabs__item-control--next mui--text-body1 mui--text-light" aria-label="{% trans %}Next{% endtrans %}" on-click="swipe(1)"><svg class="fa5-icon fa5-icon--subhead fa5--align-baseline" aria-hidden="true" role="img"><use xlink:href="{{ svgIconUrl }}#chevron-right"></use></svg></p>
                  </div>
                </div>
              </div>
            </div>
          </div>
          <div class="mui-container">
            <div class="grid">
              <div class="tab-content grid__col-sm-12 grid__col-lg-9">
                {{#each results:result }}
                  {{#if result == activeTab}}
                    {{#results[result].items}}
                      <div class="tab-content__results">
                        {{#if result == 'project'}}
                          <a href="{{ url }}" aria-label="{{ title }}" class="card card--upcoming  clickable-card">
                            <div class="card__image-wrapper">
                              {{#if obj.bg_image }}
                                <img class="card__image" src="{{ obj.bg_image }}" alt="{{ title }}"/>
                              {{else}}
                                <img class="card__image" src="{{ defaultImage }}" alt="{{ title }}"/>
                                <p class="card__image__tagline mui--text-body1">{{ title }}</p>
                              {{/if}}
                            </div>
                            <div class="card__body">
                              {{#if obj.calendar_weeks.weeks && obj.calendar_weeks.weeks.length > 0 }}
                                <div aria-label="{{ project.datelocation }}">
                                  <div class="card__calendar" aria-hidden="true">
                                    <div class="calendar">
                                      <p class="calendar__weekdays__month__name">{{ obj.calendar_weeks.weeks[0].month }} {{ obj.calendar_weeks.weeks[0].year }}</p>

                                      <div class="calendar__weekdays mui--bg-accent">
                                        {{#obj.calendar_weeks.weeks}}{{# { week: . } }}
                                          <div class="calendar__weekdays__dates">
                                            {{#each week.dates: date}}
                                              <p class="calendar__weekdays__dates__date {{#if week.dates[date].count > 0 }}calendar__weekdays__dates__date--active mui--text-dark {{elseif week.dates[date].isoformat == obj.calendar_weeks.today }} calendar__weekdays__dates__date--today {{else}} mui--text-accent{{/if}}">
                                                <span class="calendar__weekdays__dates__date__text">{{ week.dates[date].day }}</span><br>
                                                <span class="calendar__weekdays__name mui--text-title {{#if week.dates[date].count > 0 }} calendar__weekdays__name--active {{elseif week.dates[date].isoformat == obj.calendar_weeks.today }}  calendar__weekdays__name--today{{/if}}">{{ obj.calendar_weeks.days[date] }}</span>
                                              </p>
                                            {{/each}}
                                          </div>
                                        {{/}}{{/week}}
                                      </div>
                                    </div>
                                  </div>
                                </div>
                              {{/if}}
                              <div class="card__body__title js-truncate {{#if !obj.calendar_weeks.weeks }} card__body__title--smaller {{/if}}" data-truncate-lines="3"><span class="mui--text-bold">{{{ title_html }}}:</span> <span class="mui--text-light">{{ obj.tagline }}</span></div>
                              <p class="mui--text-subhead card__body__location">
                              {{#if obj.location }}
                                <svg class="fa5-icon fa5-icon--caption" aria-hidden="true" role="img"><use xlink:href="{{ svgIconUrl }}#map-marker-alt"></use></svg> {{ obj.location }}
                              {{/if}}
                              </p>
                              <p class="mui--text-body1 mui--text-light zero-top-margin snippets"><svg class="fa5-icon search-icon" aria-hidden="true" role="img"><use xlink:href="{{ svgIconUrl }}#search"></use></svg> {{{ snippet_html }}}</p>
                            </div>
                          </a>
                        {{elseif result == 'profile'}}
                          <a href="{{ url }}" aria-label="{{ title }}" class="card card--upcoming  clickable-card">
                            <div class="card__image-wrapper">
                              {{#if obj.logo_url }}
                                <img class="card__image" src="{{ obj.logo_url }}" alt="{{ title }}"/>
                              {{else}}
                                <img class="card__image" src="{{ defaultImage }}" alt="{{ title }}"/>
                                <p class="card__image__tagline mui--text-body1">{{{ title_html }}}</p>
                              {{/if}}
                            </div>
                            <div class="card__body">
                              <div class="card__body__title js-truncate card__body__title--smaller" data-truncate-lines="3"><span class="mui--text-bold">{{{ title_html }}}</span> <span class="mui--text-light">{{{ obj.description.html }}}</span></div>
                              <p class="mui--text-body1 mui--text-light zero-top-margin snippets"><svg class="fa5-icon search-icon" aria-hidden="true" role="img"><use xlink:href="{{ svgIconUrl }}#search"></use></svg> {{{ snippet_html }}}</p>
                            </div>
                          </a>
                        {{elseif result == 'session'}}
                          <div class="user-box">
                            {{#if obj.user.avatar }}
                              <img class="user-gravatar" src="{{ obj.user.avatar }}" {{#if obj.speaker }} alt="{{ obj.speaker }}" aria-labl="{{ obj.speaker }}"{{/if}} />
                            {{else}}
                              <img class="user-gravatar" src="https://www.gravatar.com/avatar/00000000000000000000000000000000?d=mp&f=y" {{#if obj.speaker }} alt="{{ obj.speaker }}" aria-labl="{{ obj.speaker }}"{{/if}} />
                            {{/if}}
                            <h2 class="mui--text-subhead mui--text-bold zero-top-margin zero-bottom-margin"><a href="{{ url }}">{{{ title_html }}}</a></h2>
                            <h3 class="mui--text-body1 zero-top-margin zero-bottom-margin">{{#if obj.speaker }}<span>{{ obj.speaker }}</span> <span class="mui--text-light">in</span>{{/if}} <span>{{ obj.project.title }} </span></h3>
                            <p class="mui--text-body1 zero-top-margin  zero-bottom-margin"><span class="mui--text-light">at</span> {{ formatTime(obj.start_at) }}–{{ formatTime(obj.end_at) }} <span class="mui--text-light">on</span> {{ formatDate(obj.start_at) }}</p>
                            <p class="mui--text-body1 mui--text-light zero-top-margin snippets"><svg class="fa5-icon search-icon" aria-hidden="true" role="img"><use xlink:href="{{ svgIconUrl }}#search"></use></svg> {{{ snippet_html }}}</p>
                          </div>
                        {{elseif result == 'proposal'}}
                          <div class="user-box">
                            {{#if obj.user.avatar }}
                              <img class="user-gravatar" src="{{ obj.user.avatar }}" {{#if obj.speaker }} alt="{{ obj.speaker }}" aria-labl="{{ obj.speaker }}"{{/if}} />
                            {{else}}
                              <img class="user-gravatar" src="https://www.gravatar.com/avatar/00000000000000000000000000000000?d=mp&f=y" {{#if obj.speaker }} alt="{{ obj.speaker }}" aria-labl="{{ obj.speaker }}" {{/if}} />
                            {{/if}}
                            <h2 class="mui--text-subhead mui--text-bold zero-top-margin zero-bottom-margin"><a href="{{ url }}">{{{ title_html }}}</a></h2>
                            <h3 class="mui--text-body1 zero-top-margin zero-bottom-margin">{{#if obj.speaker.fullname }}<span>{{ obj.speaker.fullname }}</span> <span class="mui--text-light">in</span>{{/if}} <span>{{ obj.project.title }} </span></h3>
                            {{#if obj.session}}{{#if obj.session.start_at}}
                              <p class="mui--text-body1 zero-top-margin"><span class="mui--text-light">at</span> {{ formatTime(obj.session.start_at) }}–{{ formatTime(obj.session.end_at) }} <span class="mui--text-light">on</span> {{ formatDate(obj.session.start_at) }}</p>
                            {{/if}}{{/if}}
                            <p class="mui--text-body1 mui--text-light snippets"><svg class="fa5-icon search-icon" aria-hidden="true" role="img"><use xlink:href="{{ svgIconUrl }}#search"></use></svg>{{{ snippet_html }}}</p>
                          </div>
                        {{elseif result == 'comment'}}
                          <div class="user-box">
                            {{#if obj.user.avatar }}
                              <img class="user-gravatar" src="{{ obj.user.avatar }}" {{#if obj.speaker }} alt="{{ obj.speaker }}" aria-labl="{{ obj.speaker }}"{{/if}} />
                            {{else}}
                              <img class="user-gravatar" src="https://www.gravatar.com/avatar/00000000000000000000000000000000?d=mp&f=y" {{#if obj.speaker }} alt="{{ obj.speaker }}" aria-labl="{{ obj.speaker }}" {{/if}} />
                            {{/if}}
                            <h2 class="mui--text-subhead mui--text-bold zero-top-margin zero-bottom-margin"><a href="{{ url }}">{{ obj.title }}</a></h2>
                            <p class="mui--text-body1 mui--text-light">{{ formatDate(obj.created_at) }} {{#if obj.edited_at}}(edited {{ formatDate(obj.created_at) }}) {{/if}}</p>
                            <p class="mui--text-body1 mui--text-light zero-top-margin snippets"><svg class="fa5-icon search-icon" aria-hidden="true" role="img"><use xlink:href="{{ svgIconUrl }}#search"></use></svg> {{{ snippet_html }}}</p>
                          </div>
                        {{/if}}
                      </div>
                    {{else}}
                      <p class="mui--text-title">No results found</p>
                    {{/}}
                    {{#if results[result].next_num }}
                      <p class="js-lazy-loader mui--text-title mui--text-bold mui--text-center" data-next-page="{{ results[result].next_num }}"><svg class="fa5-icon fa5-icon--subhead test fa5--align-baseline" aria-hidden="true" role="img"><use xlink:href="{{ svgIconUrl }}#spinner"></use></svg> Loading more</p>
                    {{/if}}
                  {{/if}}
                {{/each}}
              </div>
            </div>
          </div>
        </script>
        {% endraw %}
      </div>
    </div>
  </div>
{% endblock %}

{% block footerscripts %}
  {% assets "js_jquerysuccinct" -%}
    <script type="text/javascript" src="{{ ASSET_URL }}"></script>
  {%- endassets -%}
  <script src="{{ url_for('static', filename=asset_path('search')) }}" type="text/javascript"></script>
  <script type="text/javascript">
    $(function() {

      var searchConfig = {
        counts: {{ counts|tojson }},
        results: {{results|default("")|tojson}},
        defaultImage: "{{url_for('static', filename='img/card-background.png')}}",
        svgIconUrl: {% assets "fa5-sprite" %}"{{ ASSET_URL }}"{% endassets %},
      };

      HasGeek.Search(searchConfig);

      $('.truncate').succinct({
        size: 150
      });

    });
  </script>
{% endblock %}
