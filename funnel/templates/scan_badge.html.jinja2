{% extends "layout.html.jinja2" %}
{% set title_suffix = project.title %}
{% from "macros.html.jinja2" import rsvpform, rsvpscript %}
{% from "baseframe/forms.html" import renderfield %}
{% block title %}{{ event.title }}{% endblock %}
{% block pageheaders %}
{% endblock %}

{% block bodytag %}
  {%- if not config['LEGACY'] -%}
    <body class="mui--bg-primary hg-app no-header">
  {%- else %}
    <body class="mui--bg-primary no-header">
  {%- endif %}
{% endblock %}

{% block headline -%}
{%- endblock %}

{% block basecontentbox %}
  <div id="scan-badge-wrapper">
    {% raw %}
      <script id='scan-badge-template' type='text/ractive'>
        <div class="scanner-wrapper scanner-wrapper--center">
          <video id="qrreader" class="scanner-wrapper__camera" playsinline autoplay></video>
          {{#if video}}<i class="material-icons scanner-wrapper__badge--icon">center_focus_strong</i> {{/if}}
          {{#if !video && error}}
            <p class="mui--text-danger">{{ error }}</p>
          {{/if}}
          {{#if video}}
          <div>
            <div class="mui-select camera-dropdown">
              <select value='{{selectedCamera}}' class="mui--d-inlineblock">
                <option value=''>Select camera</option>
                {{#cameras}}
                  <option value='{{value}}'>{{label}}</option>
                {{/cameras}}
              </select>
            </div>
            <p><button type="button" class="mui-btn mui-btn--small mui-btn--raised mui-btn--primary" on-click="switchCamera(event)">Switch camera</button></p>
          </div>
          {{/if}}
        </div>

        {{#if showModal}}
        <div id="status-msg" class="modal" tabindex="-1" role="dialog">
          <div class="modal__header">
            <a class="modal__close" href="javascript:void(0);" on-click="closeModal(event)" aria-label="{% trans %}Close{% endtrans %}"><i class="material-icons" aria-hidden="true">clear</i></a>
            <h3 class="mui--text-title">Check in status</h3>
          </div>
          <div class="modal__body">
            {{#if scanning}}
              <h4>Scanning <i class="material-icons mui--text-subhead mui--align-middle spinner" aria-hidden="true">refresh</i></h4>
            {{elseif attendeeFound}}
              <h4>Hello {{attendeeName}},</h4>
              <p>Thank you for choosing to participate in {{ projectTitle }} and for being a part of this growing community.</p>
              <p>HasGeek</p>
            {{else}}
              <h4>Attendee details not found</h4>
            {{/if}}
            <a href="javascript:void(0);" on-click="closeModal(event)" class="mui-btn mui-btn--small mui-btn--raised mui-btn--accent">Close</a>
          </div>
        </div>
        {{/if}}
      </script>
    {% endraw %}
  </div>
{% endblock %}

{% block footerscripts %}
  <script src="{{ url_for('static', filename=asset_path('scan_badge')) }}" type="text/javascript"></script>
  <script type="text/javascript">
    $(function() {

      var eventConfig = {};
      eventConfig.checkinApiUrl = "{{ url_for('checkin_puk', profile=project.profile.name, project=project.name, name=event.name, puk='puk') }}"

      eventConfig.wrapperId = 'scan-badge-wrapper';
      eventConfig.templateId = 'scan-badge-template';
      eventConfig.projectTitle = {{ project.title|tojson }};
      eventConfig.eventTitle = {{ event.title|tojson }};

      window.HasGeek.BadgeScanInit(eventConfig);

    });
  </script>
{% endblock %}
