{% extends "layout.html.jinja2" %}
{% from "baseframe/forms.html.jinja2" import renderform %}

{% block title %}{% trans %}Sign up{% endtrans %}{% endblock %}

{% block bodytag %}
  {%- if not config['LEGACY'] -%}
    <body class="login-page hg-app no-sticky-header">
  {%- else %}
    <body class="login-page no-sticky-header">
  {%- endif %}
{% endblock %}

{% block headline %}{% endblock %}

{% block content %}
  <div class="login-page__back mui--hidden-md mui--hidden-lg mui--hidden-xl">
    <a class="js-popup-back" href="{{ url_for('index') }}" aria-label="close">{{ faicon(icon='times', icon_size='title') }}</a>
  </div>

  <div class="login-page__box">
    <h2 class="mui--text-headline login-page__box__heading mui--text-center">{% trans %}Sign up{% endtrans %}</h2>
    <div>
      {% for provider in login_registry %}
        <a class="mui-btn mui-btn--raised login login-{{ provider }} mui--d-block" href="{{ url_for('login_service', service=provider, next=request.args.get('next')) }}" data-action="login using {{ provider }}" aria-label="login using {{ provider }}"><img src="{{ url_for('static', filename='img/' + login_registry[provider].icon + '.svg') }}" class="icon-img" alt="{{ login_registry[provider]['title'] }}" aria-label="hidden"/></i>{{ login_registry[provider]['title'] }}</a>
      {% endfor %}
    </div>
    <p class="mui--text-body2 mui--text-light login-page__box__title mui--text-center"><span class="login-page__box__title__txt">{% trans %}or use your email instead{% endtrans %}</span></p>
    {{ renderform(form, formid='register', submit='Sign up') }}
    <p class="mui--text-caption">{% trans %}By signing in, you agree to HasGeekâ€™s <a href="/about/policy/terms">terms of service</a> and <a href="/about/policy/privacy" target="_blank">privacy policy</a>.{% endtrans %}</p>
    <p class="mui--text-subhead login-page__box__note">{% trans %}Already have an account?{% endtrans %} <a href="{{ url_for('login') }}">{% trans %}Login{% endtrans %}</a></p>
  </div>
{% endblock %}
