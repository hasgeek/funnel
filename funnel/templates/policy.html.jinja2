{% extends "layout.html.jinja2" %}
{% block title %}{{ page.title }}{% endblock title %}
{%- from "macros.html.jinja2" import about_page_footer %}

{% block top_title %}
  <h1 class="mui--text-headline"><strong>{{ self.title() }}</strong></h1>
{% endblock top_title %}

{% block pageheaders %}
  <link rel="stylesheet" type="text/css" href="{{ manifest('css/about.css') }}" />
{% endblock pageheaders %}

{% block contentwrapper -%}
  <div class="grid">
    <div class="grid__col-xs-12 grid__col-sm-5 grid__col-md-4 grid__col-lg-3">
      <div class="sticky-admin-panel">
        <div class="card">
          <div class="card__header">
            <h3 class="mui--text-title">{% trans %}Site policies{% endtrans %}</h3>
          </div>
          <div class="card__body">
            <ul class="list--aligned mui-list--unstyled">
              {%- for page in index %}
                <li><p><a href="{{ url_for('policy', path=page.path) }}">{{ page.title }}</a></p></li>
              {%- endfor %}
            </ul>
          </div>
        </div>
      </div>
    </div>

    <div class="grid__col-xs-12 grid__col-sm-7 grid__col-md-8 grid__col-lg-9">
      {{ page.html | safe }}
    </div>
  </div>
{%- endblock contentwrapper %}

{% block basefooter %}
  {{ about_page_footer('policy') }}
{% endblock basefooter %}

{% block footerscripts %}
{% endblock footerscripts %}
