<div itemscope itemtype="http://schema.org/EmailMessage">
	<div itemprop="action" itemscope itemtype="http://schema.org/ConfirmAction">
		<meta itemprop="name" content="Confirm Email Address"/>
		<div itemprop="handler" itemscope itemtype="http://schema.org/HttpActionHandler">
			<link itemprop="url" href="{{ url_for('confirm_email', _external=True, email_hash=useremail.email_address.email_hash, secret=useremail.verification_code) }}"/>
		</div>
	</div>
	<meta itemprop="description" content="Confirm your email address"/>
	<div itemprop="publisher" itemscope itemtype="http://schema.org/Organization">
		<meta itemprop="name" content="{{ config['SITE_TITLE'] }}"/>
		<link itemprop="url" href="{{ request.url_root }}"/>
	</div>
</div>
<p>{% trans name=useremail.user.fullname %}Hello {{ name }},{% endtrans %}</p>
<p><a href="{{ url_for('confirm_email', _external=True, email_hash=useremail.email_address.email_hash, secret=useremail.verification_code) }}">{% trans %}Click here to confirm your email address{% endtrans %}</a></p>
<p>{% trans %}If you did not sign up, you may safely ignore this email.{% endtrans %}</p>
