{% extends "user_profile.html.jinja2" %}

{% block bodytag %}
  <body class="mui--bg-primary hg-app no-sticky-header page-with-banner">
{% endblock %}

{% block baseheadline %}
  <div class="mui--hidden-md mui--hidden-lg mui--hidden-xl">
    <div class="mobile-nav mui--z1">
      <a href="{{ profile.url_for() }}" aria-label="{% trans %}Back to the profile{% endtrans %}" class="mui--text-dark mobile-nav__icon" data-action="Back to the {{ profile.title }}(projects page)">{{ faicon(icon='arrow-left', icon_size='title') }}</a><span class="mui--text-dark mobile-nav__headline">{% trans %}Projects{% endtrans %}</span>
    </div>
  </div>
  {{ profile_header(profile,  class='mui--hidden-xs mui--hidden-sm', current_page='projects') }}
{% endblock %}

{% block contentwrapper %}
  <div class="grid" id="tagged-sessions">
    <div class="grid__col-xs-12">
      {% if participated_projects %}
        <p class="mui-text--body2 zero-bottom-margin bottom-padding">{{ ngettext("%(num)d project participated in", "%(num)d projects participated in", participated_projects|length) }}</p>
      {% else %}
        <p class="mui-panel mui--bg-accent">{% trans %}No participation yet.{% endtrans %}</p>
      {% endif %}
    </div>
    <ul class="mui-list--unstyled grid upcoming" role="list">
      {% for project in participated_projects %}
        <li class="grid__col-xs-12 grid__col-sm-6 grid__col-lg-4" role="listitem">
          {{ projectcard(project, include_calendar=true, calendarwidget_compact=false) }}
        </li>
      {%- endfor -%}
    </ul>
  </div>
{% endblock %}

{% block footerscripts %}
{% endblock %}
