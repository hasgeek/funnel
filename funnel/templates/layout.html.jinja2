{% block layoutscripts %}
  <script type="text/javascript">
    window.Hasgeek = {};
    window.Hasgeek.config = {};
    window.Hasgeek.config.svgIconUrl = {% assets "fa5-sprite" %}"{{ ASSET_URL|make_relative_url }}"{% endassets %};
    window.Hasgeek.config.notificationCount = {{ url_for('notifications_count')|tojson }};
    window.Hasgeek.config.accountSudo = {{ url_for('account_sudo')|tojson }};
    window.Hasgeek.config.unreadCommentUrl = {{ url_for('comments')|tojson }};
    window.Hasgeek.config.commentSidebarElem = '#js-unread-comments';
  </script>
  {% assets "js_jquerytruncate" -%}
    <script type="text/javascript" src="{{ ASSET_URL }}"></script>
  {%- endassets -%}
  <script src="{{ url_for('static', filename=asset_path('app')) }}" type="text/javascript"></script>
  {%- if not config['LEGACY'] -%}
  <script type="text/javascript">
    if ('serviceWorker' in navigator) {
      window.addEventListener('load', function() {
        navigator.serviceWorker.register('/service-worker.js')
        .then(function(registration) {
          console.log('Service Worker registration successful with scope: ',
          registration.scope);
        })
        .catch(function(err) {
          console.log('Service Worker registration failed: ', err);
        });
      });

      // Setup a listener to track Add to Homescreen events.
      window.addEventListener('beforeinstallprompt', event => {
        event.userChoice.then(choice => {
          if (window.ga) {
            window.ga('send', 'event', 'Add to Home', choice.outcome);
          }
        });
      });
    }
  </script>

  <script type="text/javascript">
    const Store = {
      // Local storage can only save strings, so value is converted into strings and stored.
      add(key, value) {
        return localStorage.setItem(key, JSON.stringify(value));
      },
      // Reads from LocalStorage.
      read(key) {
        return JSON.parse(localStorage.getItem(key));
      },
    };

    var searchKeys = Store.read('search-keys');

    if(searchKeys && searchKeys.length > 0) {
      var autocompleteHtml = {{ search_keyword()|tojson }};
      var KeywordHtml;
      searchKeys.forEach(function(keyword) {
        KeywordHtml = autocompleteHtml.replace('keyword-replace', keyword);
        $('.js-search-dropdown').append(KeywordHtml);
      });

      $('.js-search-keyword').on('click', function (e) {
        e.preventDefault();
        $('.js-search-field').val($(this).text());
      });

      $('.js-clear-search-keyword').on('click', function (e) {
        e.stopPropagation();
        var keyword = $(this).parents('.js-search-keyword').text();
        var autocompleteList = Store.read('search-keys');
        autocompleteList.splice(autocompleteList.indexOf(keyword), 1);
        Store.add('search-keys', autocompleteList);
        $(this).parent('.js-search-keyword').remove();
      });
    }

    $('.js-search-field').on('click', function(e) {
      e.preventDefault();
      $(this).addClass('search-form__field--selected');
      $('.js-search-dropdown').addClass('search-form__dropdown--show');
    });

    $('body').on('click', function (e) {
      if (
        $('.js-search-dropdown').hasClass('search-form__dropdown--show') &&
        !$(e.target).is('.js-search-field') &&
        !$.contains($('.js-search-dropdown')[0], e.target)
      ) {
        $('.js-search-field').removeClass('search-form__field--selected');
        $('.js-search-dropdown').removeClass('search-form__dropdown--show');
      }
    });

    $('input[type=radio][name=search-domain]').change(function() {
       $('.js-search-form').attr('action', this.value);
    });

    $('.js-search-form').on('submit', function() {
      var searchKeys = Store.read('search-keys');
      var keyword = $('.js-search-field').val();
      if(!searchKeys) {
        searchKeys = [];
      }
      if(searchKeys.indexOf(keyword) === -1) {
        searchKeys.push(keyword);
      }
      Store.add('search-keys', searchKeys);
    });
  </script>
  {%- endif -%}
