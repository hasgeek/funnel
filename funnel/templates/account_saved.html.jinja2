{% extends "layout.html.jinja2" %}
{%- from "macros.html.jinja2" import faicon, account_tabs, projectcard, calendarwidget %}

{% block title %}{% trans %}My account{% endtrans %}{% endblock title %}

{% block bodyattrs %}class="bg-primary tabs-navbar"{% endblock bodyattrs %}

{% block headline -%}
  <div class="tabs-wrapper tabs-wrapper--sticky">
    <div class="mui-container">
      {{ account_tabs(active_tab='saved') }}
    </div>
  </div>
{%- endblock headline %}

{% block basecontent %}
  <div class="mui-container tab-content">
    <div class="saved-projects-wrapper">
      <ul class="mui-list--unstyled grid" role="list">
      {% for saved in saved_projects %}
        <li class="grid__col-xs-12 grid__col-sm-6 grid__col-lg-4" role="listitem">
          {{ projectcard(saved.project, calendarwidget_compact=false) }}
        </li>
      {%- endfor -%}
      </ul>
    </div>
  </div>
{% endblock basecontent %}

{% block footerscripts %}
  <script src="{{ manifest('account_saved.js') }}" type="text/javascript"></script>
{% endblock footerscripts %}
