{%- extends "notifications/layout_email.html.jinja2" -%}
{%- from "notifications/macros_email.html.jinja2" import cta_button -%}
{%- block content -%}

    <tr align="center">
        <td class="text-content">
            <p class="body-content">{% trans project=project.joined_title, proposal=proposal.title %}You have submitted <b>{{ proposal }}</b> to the project <b>{{ project }}</b>{% endtrans %}</p>
        </td>
    </tr>
    <br/>

    {# Button : BEGIN #}
    {{ cta_button(proposal.url_for(_external=true, **view.tracking_tags()), gettext("View submission") )}}
    {# Button : END #}

{%- endblock content -%}
