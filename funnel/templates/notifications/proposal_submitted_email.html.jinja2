{%- extends "notifications/layout_email.html.jinja2" -%}
{%- from "notifications/macros_email.html.jinja2" import hero_image, cta_button -%}
{%- block content -%}

    {# Hero image centered : BEGIN #}
    {{ hero_image("https://images.hasgeek.com/embed/file/e7747f3f80b442d9bd8d068e6114f3a4?size=196x130") }}
    {# Hero image centered : END #}

    {# Email body : BEGIN #}
    <tr align="center">
        <td class="text-container">
            <h1>Proposal sumbitted!</h1>
            <p>
                {% trans project=project.joined_title, proposal=proposal.title %}
                You have submitted <b>{{ proposal }}</b> to the project <b>{{ project }}</b>
                {% endtrans %}
            </p>
        </td>
    </tr>
    <br>

    {# Button : BEGIN #}
    {{ cta_button(proposal.url_for(_external=true, **view.tracking_tags()), "View submission" )}}
    {# Button : END #}

    {# Email body : END #}

{%- endblock content -%}
