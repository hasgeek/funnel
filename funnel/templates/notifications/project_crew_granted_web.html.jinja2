{%- extends "notifications/layout_web.html.jinja2" -%}

{%- block content -%}
  {%- if view.is_rollup -%}
    <ol class="list--aligned">
      {%- for membership in view.fragments -%}
      <li>{{ view.activity_html(membership) }}
        <span class="mui--text-body2">
          {{ membership.granted_at|age }}
        </span>
      </li>
      {%- endfor %}
    </ol>
  {%- else %}
    <p>{{ view.activity_html() }}</p>
  {%- endif %}
{%- endblock content -%}

{%- block avatar -%}
  {%- if view.is_rollup -%}
    {{ useravatar(view.membership.project.account, add_follow_btn=false) }}
  {%- else -%}
    {{ useravatar(view.actor, add_follow_btn=false) }}
  {%- endif -%}
{%- endblock avatar -%}
