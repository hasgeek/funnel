{%- extends "notifications/layout_email.html.jinja2" %}

{%- block content -%}
  <p>
    {% trans support_email=config['SITE_SUPPORT_EMAIL'] %}Your password has been updated. If this was not authorized, please reset with a more secure password. Contact support at <a href="mailto:{{ support_email }}">{{ support_email }}</a> if further assistance is needed.{% endtrans -%}
  </p>

  <p class="btn-bar">
    <a class="btn" href="{{ url_for('reset') }}">{% trans %}Reset password{% endtrans %}</a>
  </p>

{%- endblock -%}
