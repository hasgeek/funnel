{%- extends "notifications/layout_email.html.jinja2" -%}
{%- block content -%}

  {# Hero image centered : BEGIN #}
  {{ hero_image(view.hero_image) }}
  {# Hero image centered : END #}

  {# Email body : BEGIN #}
  <tr align="center">
    <td class="text-container">
      <h1>{% trans %}{{ view.email_title }}{% endtrans %}</h1>
      <p>{%- trans %}Your password has been updated. If you did this, no further action is necessary.<br>If this was not authorized, consider resetting with a more secure password. <a href="mailto:{{ config['SITE_SUPPORT_EMAIL'] }}">Contact support</a> if further assistance is required.{% endtrans -%}</p>
    </td>
  </tr>
  <br>

  {# Button : BEGIN #}
  {{ cta_button(url_for('reset'), gettext("Reset password") )}}
  {# Button : END #}

  {# Email body : END #}

{%- endblock content -%}
