{%- extends "notifications/layout_email.html.jinja2" -%}
{%- block content -%}
    {# Hero Image Centered : BEGIN #}
    <tr>
        <td>
            <img src="https://images.hasgeek.com/embed/file/89f039083c5c400c86cf53e428f5752c?size=320x240" width="196px" height="" alt="alt_text" border="0" class="header-image g-img">
        </td>
    </tr>
    {# Hero Image Centered : END #}

    {# Email body : BEGIN #}
    <tr align="center">
        <td class="text-container">
            <h1>Password updated!</h1>
            <p>
              {%- trans %}Your password has been updated. If you did this, no further action is necessary.{% endtrans -%}
            </p>
            <p>
              {%- trans %}If this was not authorized, consider resetting with a more secure password. <a href="mailto:{{ config['SITE_SUPPORT_EMAIL'] }}">Contact support</a> if further assistance is required.{% endtrans -%}
            </p>
        </td>
    </tr>
    <tr>
        <td class="button-td button-td-primary">
            {# Button : BEGIN #}
            <div align="center">
                <!--[if mso]>
                    <v:roundrect xmlns:v="urn:schemas-microsoft-com:vml" xmlns:w="urn:schemas-microsoft-com:office:word" href="{{ url_for('reset') }}" style="height:40px;v-text-anchor:middle;width:200px;" arcsize="10%" strokecolor="#4d5763" fillcolor="#4d5763">
                    <w:anchorlock/>
                    <center style="color:#ffffff;font-family:sans-serif;font-size:15px;font-weight:bold;">{% trans %}Reset password{% endtrans %}</center>
                    </v:roundrect>
                <![endif]-->
                <!--[if !mso]> <!-->
                  <div>
                      <a class="button-a button-a-primary" href="{{ url_for('reset') }}">{% trans %}Reset password{% endtrans %}</a>
                  </div>
                <!-- <![endif]-->
            </div>
            {#-- Button : END #}
        </td>
    </tr>
    {# Email body : END #}

{%- endblock content -%}
