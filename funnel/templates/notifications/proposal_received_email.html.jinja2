{%- extends "notifications/layout_email.html.jinja2" -%}
{%- from "notifications/macros_email.html.jinja2" import cta_button -%}
{%- block content -%}

    <tr align="center">
        <td class="text-content">
            <p class="body-content">{% trans project=project.joined_title, proposal=proposal.title %}Your project <b>{{ project }}</b> has a new submission: <b>{{ proposal }}</b>{% endtrans %}</p>
        </td>
    </tr>
    <br/>

    {# Button : BEGIN #}
    {{ cta_button(proposal.url_for(_external=true, **view.tracking_tags()), gettext("Submission page") )}}
    {# Button : END #}

{%- endblock content -%}
