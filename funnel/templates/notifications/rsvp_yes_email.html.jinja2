{% extends "notifications/layout_email.html.jinja2" %}
{%- from "macros.html.jinja2" import project_title %}
{% block content -%}

<p>{% trans actor=view.actor.fullname %}Hi {{ actor }},{% endtrans %}</p>

<p>{% trans project=project_title(project) %}You have registered for <b>{{ project }}</b>.{% endtrans %}</p>

{% with next_session_at=project.next_session_at %}{% if next_session_at -%}
  <p>{% trans date_and_time=next_session_at|datetime %}The next session in the schedule will begin at {{ date_and_time }}.{% endtrans %}</p>
{%- endif %}{% endwith %}

<p><a class="btn" href="{{ project.url_for(_external=true, utm_medium='email', utm_campaign='notification', utm_source=view.notification.eventid) }}">{% trans %}Project page{% endtrans %}</a></p>

{%- endblock %}
