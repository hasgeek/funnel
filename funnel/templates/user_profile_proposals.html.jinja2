{% extends "user_profile.html.jinja2" %}

{% block baseheadline %}
  {{ profile_header(profile, current_page='proposals') }}
{% endblock %}

{% block contentwrapper %}
  <div class="grid" id="tagged-sessions">
    <div class="grid__col-xs-12">
      {% if submitted_proposals %}
        <p class="mui-text--body2 zero-bottom-margin bottom-padding">{% trans count=submitted_proposals|length %}{{ count }} proposal submissions{% endtrans %}</p>
      {% else %}
        <p class="mui-text--body2 zero-bottom-margin bottom-padding">{% trans %}No proposal submission yet.{% endtrans %}</p>
      {% endif %}
    </div>
    <div class="grid__col-xs-12">
      {{ proposal_list(submitted_proposals) }}
    </div>
  </div>
{% endblock %}

{% block footerscripts %}
{% endblock %}
