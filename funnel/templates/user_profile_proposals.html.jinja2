{% extends "user_profile.html.jinja2" %}

{% block bodytag %}
  <body class="mui--bg-primary hg-app no-sticky-header mobile-header">
{% endblock %}

{% block baseheadline %}
  <div class="mui--hidden-md mui--hidden-lg mui--hidden-xl mobile-nav-wrapper">
    <div class="mobile-nav mui--z1">
      <a href="{{ profile.url_for() }}" aria-label="{% trans %}Back to the profile{% endtrans %}" class="mui--text-dark mobile-nav__icon" data-ga="Back to the profile page">{{ faicon(icon='arrow-left', icon_size='title') }}</a><span class="mui--text-dark mobile-nav__headline">{% trans %}Submissions{% endtrans %}</span>
    </div>
  </div>
  {{ profile_header(profile,  class='mui--hidden-xs mui--hidden-sm', current_page='submissions') }}
{% endblock %}

{% block contentwrapper %}
  <div class="grid projects-wrapper" id="tagged-submissions">
    <div class="grid__col-xs-12">
      {% if submitted_proposals %}
        {{ proposal_list(submitted_proposals) }}
      {% else %}
        <p class="mui-panel mui--bg-accent">{% trans %}No submissions{% endtrans %}</p>
      {% endif %}
    </div>
  </div>
{% endblock %}

{% block footerscripts %}
{% endblock %}
