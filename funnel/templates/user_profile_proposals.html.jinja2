{% extends "user_profile.html.jinja2" %}

{% block baseheadline %}
  {{ profile_header(profile, current_page='proposals') }}
{% endblock %}

{% block contentwrapper %}
  <div class="grid" id="tagged-sessions">
    <div class="grid__col-xs-12">
      {% if submitted_proposals %}
        <p class="mui-text--body2 zero-bottom-margin bottom-padding">{% trans count=submitted_proposals|length, plural='s' if submitted_proposals|length > 1 else ''  %}{{ count }} proposal submission{{plural}}{% endtrans %}</p>
        {{ proposal_list(submitted_proposals) }}
      {% else %}
        <p class="mui-panel mui--bg-accent">{% trans %}No proposal submission yet.{% endtrans %}</p>
      {% endif %}
    </div>
  </div>
{% endblock %}

{% block footerscripts %}
{% endblock %}
