{% extends "layout.html.jinja2" %}
{% block title %}{{ page.title }}{% endblock %}

{% block header -%}
  {% macro site_title() %}
    <a href="{{ url_for('index') }}" class="header__site-title__item">{{ config['SITE_TITLE'] }}</a>
  {%- endmacro -%}
  {{ hgtopnav(site_title=site_title()) }}
{%- endblock %}

{%- block image_src %}
  <link rel="image_src" href="{{ url_for('static', filename='img/hg-logo.png') }}" />
  <meta property="og:image" content="{{ url_for('static', filename='img/hg-logo.png') }}" />
{%- endblock %}

{% block top_title %}
  <h1 class="mui--text-display1"><strong>{{ self.title() }}</strong></h1>
{% endblock %}

{% block contentwrapper -%}
  <div class="grid">
    <div class="grid__col-xs-12 grid__col-sm-5 grid__col-md-4 grid__col-lg-3">
      <div class="sticky-admin-panel">
        <div class="card">
          <div class="card__header">
            <h3 class="mui--text-title">About</h3>
          </div>
          <div class="card__body">
            <ul class="mui-list--aligned mui-list--unstyled">
              <li><p><a href="/about/">About HasGeek</a></p></li>
              <li><p><a href="/about/team">Team &amp; careers</a></p></li>
              <li><p><a href="/about/media">Media resources</a></p></li>
              <li><p><a href="/about/contact">Contact</a></p></li>
            </ul>
          </div>
        </div>
        <div class="card">
          <div class="card__header">
            <h3 class="mui--text-title">Site Policies</h3>
          </div>
          <div class="card__body">
            <ul class="mui-list--aligned mui-list--unstyled">
              <li><p><a href="/about/policy/terms">Terms of service</a></p></li>
              <li><p><a href="/about/policy/adtos">Sponsorship &amp; advertising</a></p></li>
              <li><p><a href="/about/policy/privacy">Privacy policy</a></p></li>
              <li><p><a href="/about/policy/refunds">Cancellation &amp; refund policy</a></p></li>
              <li><p><a href="/about/policy/community">Community guidelines</a></p></li>
              <li><p><a href="/about/policy/code">Code of conduct</a></p></li>
            </ul>
          </div>
        </div>
      </div>
    </div>

    <div class="grid__col-xs-12 grid__col-sm-7 grid__col-md-8 grid__col-lg-9">
      {{ page.html | safe }}
    </div>
  </div>
{%- endblock %}

{% block footer %}
  <div class="mui-container">
    <div class="grid mui--text-body2 mui--text-left">
      <div class="grid__col-sm-6 grid__col-md-5">
        <p>{% if 'FOOTER_MESSAGE' in config %}{{ config['FOOTER_MESSAGE'] }}{% else %}{% trans %} Copyright &copy; 2010-18 HasGeek.  All rights reserved.{% endtrans %}{% endif %} <a href="/about/">About us and site policies</a></p>
        <p>
          #2699, 19th Main, 5th Cross, Indiranagar HAL 2nd Stage, Bangalore - 560008, <a href="mailto:info@hasgeek.com">info@hasgeek.com</a>, <a href="tel:+917676332020">+91 7676 33 2020</a>
        </p>
      </div>
      <div class="grid__col-sm-6 grid__col-md-3">
        <div>
          <p id="footer-twitter">
            <a href="https://twitter.com/hasgeek" class="twitter-follow-button" target="_blank">Follow @hasgeek</a>
          </p>
          <a class="fb-like" data-href="https://www.facebook.com/HasGeek" data-layout="standard" data-action="like" data-size="small" data-show-faces="true" data-share="true" href="https://www.facebook.com/HasGeek" target="_blank">Like HasGeek's page on Facebook</a>
        </div>
      </div>
      <div class="grid__col-sm-3 grid__col-md-3">
        <p>
          Hosted by <a href="http://e2enetworks.com/" target="_blank">E2E Networks</a>
        </p>
      </div>
    </div>
  </div>
{% endblock %}

{% block footerscripts %}
  <div id="fb-root"></div>
  <script>(function(d, s, id) {
    var js, fjs = d.getElementsByTagName(s)[0];
    if (d.getElementById(id)) return;
    js = d.createElement(s); js.id = id;
