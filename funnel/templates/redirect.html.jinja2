<p>{% trans %}Loadingâ€¦{% endtrans %} <span class="loading">&nbsp;</span></p>
<script type="text/javascript">
  var currentUrl = new URL(window.location.href);
  var newUrl = new URL({{ url|tojson }}, currentUrl);
  if (
    (currentUrl.origin + currentUrl.pathname + currentUrl.search)
    === (newUrl.origin + newUrl.pathname + newUrl.search)
  ) {
    // Only hash change; replace the current page and reload
    window.location.replace({{ url|tojson }});
    window.location.reload();
  } else {
    // New page; navigate to it
    window.location.assign({{ url|tojson }});
  };
</script>
