{% extends "layout.html.jinja2" %}
{% set title_suffix = project.title %}
{% from "macros.html.jinja2" import rsvpform, rsvpscript %}
{% from "baseframe/forms.html.jinja2" import renderfield %}
{% block title %}Setup events for check-in{% endblock %}

{% block top_title %}
  <h1 class="mui--text-display1"><a href="{{ project.url_for() }}">{{ project.title|e }}</a></h1>
  <p class="mui--text-headline">Setup events for check-in</p>
{% endblock %}

{% block contentwrapper %}
<div class="grid">
  <div class="grid__col-xs-12 grid__col-sm-6 grid__col-md-4">
    <div class="card">
      <div class="card__header">
        <h3 class="mui--text-title">Events</h3>
        {%- if events %}
          <p class="mui--text-caption">Select an event for manual check-in of attendees</p>
        {%- else %}
          <p class="mui--text-caption">Add events to manage check-in</p>
        {%- endif %}
      </div>
      <div class="card__body">
        <ol class="mui-list--aligned">
          {%- for event in events %}
            <li>
              <a href="{{ url_for('event', profile=project.profile.name, project=project.name, name=event.name) }}" class="mui--text-subhead">{{ event.title }}</a>{%- if project.current_roles.admin %}&nbsp;<a href="{{ url_for('event_edit', profile=project.profile.name, project=project.name, name=event.name) }}" aria-label="Edit" title="Edit"><i class="material-icons mui--text-subhead pull-right" aria-hidden="true">edit</i></a>{%- endif %}
            </li>
          {%- endfor %}
        </ol>
      </div>
      {%- if project.current_roles.admin %}
      <div class="mui-divider"></div>
      <div class="card__footer">
        <a href={{ project.url_for('new_event') }} title="{% trans %}New event {% endtrans %}" class="mui-btn mui-btn--small mui-btn--flat mui-btn--primary">New event</a>
        {%- if project.events %}
          <a href={{ project.url_for('new_participant') }} title="{% trans %}Add participant {% endtrans %}" class="mui-btn mui-btn--small mui-btn--flat mui-btn--accent">Add participant</a>
        {%- endif %}
      </div>
      {%- endif %}
    </div>
  </div>

 {%- if project.current_roles.admin %}
  <div class="grid__col-xs-12 grid__col-sm-6 grid__col-md-4">
    <div class="card">
      <div class="card__header">
        <h3 class="mui--text-title">Tickets</h3>
      </div>
      <div class="card__body">
        <ol class="mui-list--aligned">
          {%- for ticket_type in project.ticket_types -%}
            <li>
              <a href="{{ url_for('ticket_type', profile=project.profile.name, project=project.name, name=ticket_type.name) }}" class="mui--text-subhead">{{ ticket_type.title }}</a>{%- if project.current_roles.admin %}&nbsp;<a href="{{ url_for('ticket_type_edit', profile=project.profile.name, project=project.name, name=ticket_type.name) }}" aria-label="Edit" title="Edit"><i class="material-icons mui--text-subhead pull-right" aria-hidden="true">edit</i></a>{%- endif %}
            </li>
          {%- endfor %}
        </ol>
      </div>
      {%- if project.current_roles.admin %}
      <div class="mui-divider"></div>
      <div class="card__footer">
        <a href={{ project.url_for('new_ticket_type') }} title="{% trans %}New ticket type {% endtrans %}" class="mui-btn mui-btn--small mui-btn--flat mui-btn--primary">New ticket</a>
      </div>
      {%- endif %}
    </div>
  </div>

  <div class="grid__col-xs-12 grid__col-sm-6 grid__col-md-4">
    <div class="card">
      <div class="card__header">
        <h3 class="mui--text-title">Ticket clients</h3>
        <p class="mui--text-caption">Add ticket client to import tickets</p>
      </div>
      <div class="card__body">
        <ol class="mui-list--aligned">
          {%- for client in project.ticket_clients %}
            <li>
              <span class="mui--text-subhead">{{client.name}}</span>{%- if project.current_roles.admin %}&nbsp;<a href="{{ url_for('ticket_client_edit', profile=project.profile.name, project=project.name, id=client.id) }}" aria-label="Edit" title="Edit"><i class="material-icons mui--text-subhead pull-right" aria-hidden="true">edit</i></a>{%- endif %}
            </li>
          {%- endfor %}
        </ol>
      </div>
      <div class="mui-divider"></div>
        <div class="card__footer">
          <a href="{{ project.url_for('new_ticket_client') }}" title="{% trans %}New ticket client{% endtrans %}" class="mui-btn mui-btn--small mui-btn--flat mui-btn--primary">New ticket client</a>
          {%- if project.ticket_clients %}
            <form method="POST" id="csrf_form-submit" enctype="multipart/form-data" class="mui-form inline-form">
              <div class="form-group">
                {{ csrf_form.hidden_tag() }}
              </div>
              <button id="csrf_form-submit" class="mui-btn mui-btn--small mui-btn--flat mui-btn--accent" type="submit" title="{% trans %}Sync tickets{% endtrans %}">Sync tickets</button>
            </form>
          {%- endif %}
        </div>
      </div>
    </div>
  </div>
  {%- endif %}
</div>
{% endblock %}
