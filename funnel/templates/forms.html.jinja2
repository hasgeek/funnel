  {%- endif %}


  $('.js-show-password').on('click', function (event) {
    event.preventDefault();
    $(this).parent().find('.js-password-toggle').toggleClass('mui--hide');
    $(this).parent().find('input').attr('type', 'text');
  });

  $('.js-hide-password').on('click', function (event) {
    event.preventDefault();
    $(this).parent().find('.js-password-toggle').toggleClass('mui--hide');
    $(this).parent().find('input').attr('type', 'password');
  });


  //Toggle between OTP/Password login
  $('.js-toggle-login').on('click', function(event) {
    event.preventDefault();
    $('.js-fields-toggle').toggleClass('mui--hide');
  });

  $('.js-password-field input').on('change', function() {
    if($('.js-password-field').hasClass('mui--hide')) {
      $('.js-fields-toggle').toggleClass('mui--hide');
    }
  });

  $('.js-keyboard-switcher').on('click', function(event) {
    event.preventDefault();
    console.log($(this).data('placeholder'))
    $('.js-keyboard-switcher').removeClass('mui--hide');
    $(this).addClass('mui--hide');
    $('#username').attr('inputmode', $(this).data('inputmode'));
    $('#username').attr('placeholder', $(this).data('placeholder'));
  });

  // Toggle username field input mode to tel/email to change keyboard in mobile
  if($('#username').length > 0) {
    let switchToEmailBtn = $('#username').next('.js-keyboard-switcher');
    $('#username').attr('inputmode', 'tel');
    switchToEmailBtn.removeClass('mui--hide');
    $('#username').attr('placeholder', switchToEmailBtn.next('.js-keyboard-switcher').data('placeholder'));
  }

  {%- for field in form -%}
    {%- if field.type == 'FormField' %}
      {{ widgetscripts(field.form, script=false) }}
    {%- elif field.widget.input_type == 'tinymce3' -%}
      {{ tinymce3_editor(field, script=false) }}
    {%- elif field.widget.input_type == 'tinymce4' -%}
      {{ tinymce4_editor(field, script=false) }}
    {%- elif field.type in ['AutocompleteField', 'AutocompleteMultipleField', 'ProfileSelectField'] %}
      Hasgeek.Forms.textAutocomplete({
        id: {{ field.id|tojson }},
        multiple: {{ field.multiple|tojson }},
        separator: {{ field.separator|tojson }},
        autocomplete_endpoint: {{ field.autocomplete_endpoint|tojson }},
        key: {{ field.results_key|tojson }}
      });
    {%- elif field.type == 'RecaptchaField' and ref_id != '' %}
