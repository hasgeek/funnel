                  {% if featured_project.calendar_weeks.weeks and featured_project.calendar_weeks.weeks|length > 0 %}
                    <div aria-label="{{ featured_project.datelocation }}">
                      <div class="card__calendar mui--clearfix mui--bg-accent" aria-hidden="true">
                        <div class="calendar">
                          <p class="calendar__weekdays__month__name mui--text-title mui--text-bold">{{ featured_project.calendar_weeks.weeks[0].month }} {{ featured_project.calendar_weeks.weeks[0].year }}</p>
                          <div class="calendar__weekdays">
                            <div class="calendar__weekdays__name__wrapper">
                            {% for weekday in featured_project.calendar_weeks.days %}
                              <p class="calendar__weekdays__name calendar__weekdays__name--weekday mui--text-title mui--text-light">{{ weekday }}</p>
                            {% endfor %}
                            </div>
                          </div>
                          <div class="calendar__weekdays">
                            {% for week in featured_project.calendar_weeks.weeks|sort(attribute='year') %}
                              <div class="calendar__weekdays__dates">
                                {% for date in week.dates %}
                                  <p class="calendar__weekdays__dates__date {% if date.isoformat == featured_project.calendar_weeks.today %} calendar__weekdays__dates__date--today{% endif %} {% if date.count > 0 %}calendar__weekdays__dates__date--active mui--text-dark {% else %}mui--text-accent{% endif %}"><span class="calendar__weekdays__dates__date__text">{{ date.day }}</span></p>
                                {% endfor %}
                              </div>
                            {% endfor %}
                          </div>
                        </div>
                      </div>
                    </div>
                  {% endif %}
                  <div class="card__body__divider"></div>
                  <p class="card__body__footer mui--text-uppercase">
                    <a class="mui--text-dark mui--text-subhead" href="{{ featured_project.url_for() }}" title="{{ featured_project.title }}" aria-label="{{ featured_project.title }}">Visit project page&nbsp;&nbsp;{% assets "fa5-sprite" %}<svg class="fa5-icon fa5--align-baseline" aria-hidden="true" role="img"><use xlink:href="{{ ASSET_URL }}#chevron-right"></use></svg>{% endassets %}</a>
