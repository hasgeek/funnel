{% from "baseframe/components.html.jinja2" import faicon %}

<div class="modal__header" data-cy="schedule-subscribe">
  <a class="modal__close mui--text-dark" href="javascript:void(0);" data-target="close subscribe modal" aria-label="{% trans %}Close{% endtrans %}" rel="modal:close" data-cy="close-modal" role="button" tabindex="0">{{ faicon(icon='times', baseline=false, icon_size='title') }}</a>
  <p class="mui--text-title mui--text-bold mui--text-dark">{% trans %}Subscribe to the schedule{% endtrans %}</p>
</div>
<div class="modal__body">
  <div class="modal__body__btn mui--text-right">
    <a href="{{ project.url_for('schedule_ical_download', _external=True) }}" class="mui-btn mui-btn--small mui-btn--flat mui-btn--primary">{% trans %}Download{% endtrans %}</a>
    <a href="https://www.google.com/calendar/render?cid={{ project.url_for('schedule_ical_download', _external=True)|urlencode }}" target="_blank" rel="noopener" class="mui-btn mui-btn--small mui-btn--flat mui-btn--accent">{% trans %}Add to Google Calendar{% endtrans %}</a>
  </div>
</div>
