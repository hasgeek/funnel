{% from "baseframe/components.html.jinja2" import faicon %}
{%- from "macros.html.jinja2" import useravatar %}
{% for commentset in commentsets %}
  <li class="user">
    <div class="user__box">
      {{ useravatar(commentset.last_comment.user) }}
      <div class="user__box__header comment__details">
        <h3 class="mui--text-body2 user__box__fullname"><span class="mui--text-bold">{{ commentset.last_comment.user.fullname }}</span><span class="mui--text-caption mui--pull-right comment__details__age">{{ commentset.last_comment.created_at|age }}</span></h3>
        <h3 class="mui--text-caption mui--text-light user__box__subcontent"><span class="truncated-text">{{ commentset.last_comment.message.text }}</span> <span class="badge badge--round badge--round-smaller mui--pull-right">{{ commentset.new_comments_count }}</span></h3>
      <div>
    </div>
  </li>
{% endfor %}
