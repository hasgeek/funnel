{% extends "layout.html.jinja2" %}
{% set title_suffix = project.title %}
{% from "baseframe/forms.html.jinja2" import renderform %}
{% from "baseframe/components.html.jinja2" import faicon %}
{%- from "macros.html.jinja2" import project_header, project_mini_header, posts_template %}
{% block title %}{{post.title}}{% endblock %}
{% block description %}{{ project.title }}{% if project.tagline %} &ndash; {{ project.taglines }}{% endif %}{% endblock %}

{% block bodytag %}
  {%- if not config['LEGACY'] -%}
    <body class="mui--bg-primary hg-app no-sticky-header">
  {%- else %}
    <body class="mui--bg-primary no-sticky-header">
  {%- endif %}
{% endblock %}

{% block top_title %}
  {{ project_mini_header(project) }}
{% endblock %}

{% block basecontent %}
  <div class="mui-container">
    <div class="grid project-section">
      <div class="grid__col-xs-12">
        {{ posts_template() }}
        {% if post.features.publish() %}
          <div class="publish-form">
            {{ renderform(form=publish_form, submit="Publish update", action=post.url_for('project_publish')) }}
          </div>
        {% endif %}
        </div>
      </div>
    </div>
  </div>
{% endblock %}

{% block pagescripts %}
{% endblock %}

{% block footerscripts %}
  <script src="{{ url_for('static', filename=asset_path('post')) }}" type="text/javascript"></script>
  <script type="text/javascript">
    $(function() {
      var headerHeight;
      if($(window).width() < window.HasGeek.config.mobileBreakpoint) {
        headerHeight = $('.mobile-nav').height();
      } else {
        headerHeight = $('header').height() + $('nav').height();
      }

      var postConfig = {
        draft: [],
        posts: {% if post -%}[{{ post|tojson }}]{%- else -%} [] {%- endif %},
        divElem: "#posts-wrapper",
        postTemplate: '#post-template',
        isEditor: {% if project.features.post_update() -%}true{% else %}false{% endif %},
        headerHeight: headerHeight,
      };

      window.HasGeek.PostsInit(postConfig);
    });
  </script>
{% endblock %}
