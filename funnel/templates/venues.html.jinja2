{% extends "layout.html.jinja2" %}
{% block title %}{% trans %}Venues{% endtrans %} &mdash; {{ project.title }}{% endblock %}

{% block top_title %}
  <h1 class="mui--text-display1">{{ project.title|e }}</h1>
  <p class="mui--text-headline">Manage venues</p>
{% endblock %}

{% block content %}
  <ol class="mui-list--aligned">
    {%- for venue in venues %}
      <li>
        <p>
          <span class="mui--text-subhead"><strong>{{ venue.title }}</strong></span>&nbsp;
          <a href="{{ venue.url_for('edit') }}" title="{% trans %}Edit{% endtrans %}"><i class="material-icons mui--text-subhead mui--align-top left-margin">edit</i></a>
          <a href="{{ venue.url_for('delete') }}" title="{% trans %}Delete{% endtrans %}"><i class="material-icons mui--text-subhead mui--align-top left-margin">delete</i></a>
        </p>
        <div class="mui--text-body2">{{ venue.description }}</div>
        {%- if venue.rooms %}
          <ol>
            {%- for room in venue.rooms %}
              <li>
                <p>
                  <span class="mui--text-subhead"><strong>{{ room.title }}</strong></span>&nbsp;
                  <a href="{{ room.url_for('edit') }}" title="{% trans %}Edit{% endtrans %}"><i class="material-icons mui--text-subhead mui--align-top left-margin">edit</i></a>
                  <a href="{{ room.url_for('delete') }}" title="{% trans %}Delete{% endtrans %}"><i class="material-icons mui--text-subhead mui--align-top left-margin">delete</i></a>
                </p>
                <div class="mui--text-body2">{{ room.description }}</div>
              </li>
            {%- endfor %}
          </ol>
        {%- endif %}
        <p><a class="mui-btn mui-btn--small mui-btn--raised mui-btn--accent" href="{{ venue.url_for('new-room') }}" title="{% trans %}Add room{% endtrans %}">{% trans %}Add room{% endtrans %}</a></p>
      </li>
    {% else %}
      <li class="mui--text-subhead"><em>{% trans %}(No venues){% endtrans %}</em></li>
    {%- endfor %}
  </ol>
  <p>
    <a class="mui-btn mui-btn--small mui-btn--raised mui-btn--primary" href="{{ project.url_for('new-venue') }}" title="{% trans %}Add venue{% endtrans %}">{% trans %}Add venue{% endtrans %}</a>
  </p>
{% endblock %}
