{% extends "notifications/layout_email.html.jinja2" %}
{% block content -%}

  <p>{% trans project=project.title, actor=actor.pickername %}
    {{ actor }} has removed you as a crew member from ‘{{ project }}’.
  {% endtrans %}</p>

  <p class="btn-bar">
    <a class="btn" href="{{ project.url_for('crew', _external=true, utm_medium='email', utm_campaign='notification') }}">{% trans %}See all crew members{% endtrans %}</a>
  </p>

{%- endblock %}
